generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id        // Spotify user ID
  email          String? 
  displayName    String?
  avatarUrl      String?
  accessToken    String?
  refreshToken   String?
  tokenExpiresAt DateTime?
  listeningSessions ListeningSession[]
}

model ListeningSession {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])

  spotifyId     String
  trackName     String
  artistName    String
  genre         String?
  energy        Int?

  latitude      Float?
  longitude     Float?

  startedAt     DateTime // when the track started playing
  endedAt       DateTime // startedAt + duration

  source        String?  // "now-playing" | "recently-played" | "manual"
  clientAt      DateTime? // when client captured the event
  createdAt     DateTime  @default(now())

  @@index([userId, startedAt])
  @@index([latitude, longitude, startedAt])
  // (When you move to PostGIS youâ€™ll add a geo index instead)
}
